@model RespondViewModel
@{
    ViewData["Title"] = "Respond";
}

<div class="col-lg-6 mx-auto mb-5">
    <!-- Material form contact -->
    <div class="card">

        <h5 class="card-header primary-color white-text text-center py-4">
            <strong>Відгукнутися</strong>
        </h5>
        <form class="" style="color: #757575;" asp-action="Respond" method="post" enctype="multipart/form-data">

            <div class="card-body px-5 pt-0">
                <div class="col-lg-12">
                    @Html.HiddenFor(m => m.VacancyId)
                    <div class="form-group mt-3">
                        <label asp-for="FirstName" class="control-label">Ім'я</label>
                        <input asp-for="FirstName" class="form-control">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="LastName" class="control-label">Прізвище</label>
                        <input asp-for="LastName" class="form-control">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="Email" class="control-label">Електрона пошта</label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="Phone" class="control-label">Телефон</label>
                        <input asp-for="Phone" class="form-control">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="custom-file form-group mt-3">
                        <input asp-for="File" class="custom-file-input">
                        <label class="custom-file-label" asp-for="File">Резюме</label>
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 mt-3 text-center">
                    <button class="btn btn-outline-primary" type="submit">Підтвердити</button>
                </div>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(function () {
            $('#File').on('change', function () {
                var fileName = $(this).val().replace('C:\\fakepath\\', " ");
                $(this).next('.custom-file-label').html(fileName);
            })
        })


    </script>

}


